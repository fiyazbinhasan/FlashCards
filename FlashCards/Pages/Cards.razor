@page "/cards"
@inherits Fluxor.Blazor.Web.Components.FluxorComponent

<MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="AddCard">Add Card</MudButton>

<MudGrid Class="mt-4">
    @foreach (var card in CardsState.Value.Cards)
    {
        <MudItem xs="12" sm="6" md="3">
            <MudPaper Elevation="2" Class="d-flex flex-column justify-center align-center pa-3" Style="height: 100px;">
                <MudText Typo="Typo.h4">@card.Front</MudText>
                <MudText Typo="Typo.h6">@card.Back</MudText>
            </MudPaper>
        </MudItem>
    }
</MudGrid>