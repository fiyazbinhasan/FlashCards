@using FlashCards.Store.CardsUseCase

<MudGrid Class="mt-4">
    @foreach (var card in Cards)
    {
        <MudItem xs="12" sm="6" md="3">
            <CardFrame Front="@card.Front" Back="@card.Back" />
        </MudItem>
    }
</MudGrid>

@code
{
    [Parameter]
    public IEnumerable<Card> Cards { get; set; }
}
