@inherits LayoutComponentBase
@using FlashCards.Shared

<MudThemeProvider Theme="_customTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <AppBar OnMenuToggle="DrawerToggle" />
    <MudDrawer @bind-Open="_drawerOpen" Elevation="2">
        <DecksHeader />
        <DecksMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer Class="mt-8 px-8" MaxWidth="MaxWidth.False">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    readonly MudTheme _customTheme = new MudTheme()
    {
        Palette = new Palette()
        {
            Primary = "#00ADB5",
            Secondary = "#393E46",
            AppbarBackground = "#222831",
        },

        LayoutProperties = new LayoutProperties()
        {
            DrawerWidthLeft = "320px"
        }
    };
}