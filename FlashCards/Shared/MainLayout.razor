@inherits LayoutComponentBase
@using FlashCards.Shared

<MudThemeProvider Theme="_customTheme" />

<MudLayout>
    <AppBar OnMenuToggle="DrawerToggle" />
    <MudDrawer @bind-Open="_drawerOpen" Elevation="2">
        <DecksHeader />
        <DecksMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer Class="mt-8 px-8" MaxWidth="MaxWidth.False">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    readonly MudTheme _customTheme = new MudTheme()
    {
        Palette = new Palette()
        {
            Primary = "#de5c9d",
            Secondary = "#0d6efd",
            AppbarBackground = "#6f42c1",
            Error = "#dc3545",
            Success = "#198754",
            Info = "#0d6efd"
        },

        LayoutProperties = new LayoutProperties()
        {
            DrawerWidthLeft = "320px"
        }
    };
}