@inherits LayoutComponentBase
@using FlashCards.Shared

<MudThemeProvider Theme="_customTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <AppBar OnMenuToggle="DrawerToggle" />
    <MudDrawer @bind-Open="_drawerOpen" Elevation="2">
        <DecksHeader />
        <DecksMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer Class="mt-8 px-8" MaxWidth="MaxWidth.False">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    readonly MudTheme _customTheme = new MudTheme()
    {
        Palette = new Palette()
        {
            Primary = "#e93ab7",
            Secondary = "#170229",
            AppbarBackground = "#6f42c1",
            Error = "#e34d57",
            Success = "#3cf281",
            Warning = "#ffc107",
            Info = "#1ba2f6",
            Dark = "#170229"
        },

        LayoutProperties = new LayoutProperties()
        {
            DrawerWidthLeft = "320px"
        }
    };
}